<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.practice.article.ArticleMapper">

    <resultMap type="com.practice.article.ArticleDB" id="articleDBMap">
        <id property="articleId" column="ARTICLE_ID" jdbcType="BIGINT" />
        <id property="version" column="VERSION" jdbcType="INTEGER" />
        <result property="siteId" column="SITE_ID" jdbcType="BIGINT" />
        <result property="title" column="TITLE" jdbcType="VARCHAR" />
        <result property="content" column="CONTENT" jdbcType="VARCHAR" />
        <result property="createDate" column="CREATE_DATE" jdbcType="DATE" />
        <result property="modifiedDate" column="MODIFIED_DATE" jdbcType="DATE" />
        <result property="modifiedBy" column="MODIFIED_BY" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="*">
    ARTICLE_ID, VERSION, TITLE, CONTENT, CREATE_DATE, MODIFIED_BY, MODIFIED_DATE, MODIFIED_BY
    </sql>

    <sql id="values">
    #{articleDB.articleId},
    #{articleDB.version},
    #{articleDB.title},
    #{articleDB.content},
    #{articleDB.createDate},
    #{articleDB.modifiedDate},
    #{articleDB.modifiedBy}
    </sql>

    <insert id="insert" parameterType="com.practice.article.ArticleDB">
        <selectKey keyProperty="articleDB.version" resultType="java.lang.Integer" order="BEFORE">
            select COALESCE(max(VERSION), 0)+1 from article WHERE ARTICLE_ID=#{articleDB.articleId}
        </selectKey>
        insert into article (
            LOGICAL_SHARD_ID,
            <include refid="*" />
        ) values (
            #{_logicalShardId_},
            <include refid="values" />
        )
    </insert>


    <select id="selectOne"  resultType="com.practice.article.ArticleDB" resultMap="articleDBMap">
        select
          <include refid="*" />
        from
          article
        where
          ARTICLE_ID=#{articleId}
        order by VERSION desc
        limit 1
    </select>

    <select id="selectBySite"  resultType="com.practice.article.ArticleDB" resultMap="articleDBMap">
        select
          <include refid="*" />
        from
          article
        where
          SITE_ID=#{siteId},
        <if test="lastDate != null and lastId != null">
            <![CDATA[
            and (CREATE_DATE > #{lastDate} or (CREATE_DATE = #{lastDate} and ARTICLE_ID > #{lastId}))
            ]]>
        </if>
        group by ARTICLE_ID
        having VERSION = MAX(VERSION)
        order by CREATE_DATE
        limit #{pageSize}
    </select>

</mapper>